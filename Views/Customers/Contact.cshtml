@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Shop | Contact</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">



    <script src="https://kit.fontawesome.com/64e875fda5.js" crossorigin="anonymous"></script>

    <!-- CSS Style Sheets -->
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Content/movieshoppage.css">

</head>
<body style="background-color:lightgray">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                </button>
                <img class="company-logo" src="~/Iamges/OldFilmCamera.png" />
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li style="font-weight:bold;">@Html.ActionLink("Movie Shop", "MovieShop", "Customers")</li>
                    <li class="active" style="font-weight:bold;">@Html.ActionLink("Contact", "Contact", "Customers")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container contact-container" style="margin-bottom:5%;">
        <form method="post">
            <!-- Name input -->
            <div class="form-outline mb-4">
                <input type="text" name="contact-name" id="contact-name" class="form-control" />
                <label class="form-label" for="contact-name">Name</label>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" name="contact-email" id="contact-email" class="form-control" />
                <label class="form-label" for="contact-email">Email address</label>
            </div>

            <!-- Message input -->
            <div class="form-outline mb-4">
                <textarea class="form-control" name="contact-message" id="contact-message" rows="4"></textarea>
                <label class="form-label" for="contact-message">Message</label>
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input"
                       type="checkbox" value=""
                       name="send-a-copy-of-email-to-me-too"
                       id="send-a-copy-of-email-to-me-too"
                       onclick="SetTheValueOfSendMeAnEMailRadio()">
                <label class="form-check-label" for="send-a-copy-of-email-to-me-too">
                    Send me a copy of this message
                </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
        </form>
    </div>

    <!-- Google Map -->
    <div class="container">
        <div class="d-flex flex-row map-address-container">
            <div class="col-md-6 google-map-div">
                <iframe class="google-map-iframe" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4070.734588407327!2d18.067341883039013!3d59.326821500000015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f9d587e4c4a01%3A0xbdf97a9648763e36!2sKungliga%20slottet!5e0!3m2!1ssv!2sse!4v1637182383747!5m2!1ssv!2sse" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>

            <div class="col-md-6 contact-address">
                <h4>Address</h4>
                <h5>Movie Shop Inc.</h5>
                <br />
                <p>Kungliga slottet</p>
                <p>10770 Stockholm</p>
                <p>Sweden</p>
                <p><i class="fas fa-phone-square"></i>: 08-333444555</p>
                <p><i class="fas fa-at"></i>: contact@movieshop.com</p>
                <p><i class="fas fa-globe"></i>: https://www.movieshop.com</p>
                <p><i class="fab fa-linkedin"></i> <i class="fa fa-facebook"></i> <i class="fa fa-twitter"></i></p>
            </div>
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
        function SetTheValueOfSendMeAnEMailRadio() {
            if ($("#send-a-copy-of-email-to-me-too").is(":checked") == true) {
                $("#send-a-copy-of-email-to-me-too").attr("value", "Checked");
                console.log("Radio Value: " + $("#send-a-copy-of-email-to-me-too").attr("value"));
            }
            else {
            $("#send-a-copy-of-email-to-me-too").attr("value", "Unchecked");
                console.log("Radio Value: " + $("#send-a-copy-of-email-to-me-too").attr("value"));
            }
        }
    </script>
</body>
</html>
